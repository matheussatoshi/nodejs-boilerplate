{
  "name": "nodejs-boilerplate",
  "version": "0.0.0",
  "main": "index.js",
  "type": "module",
  "description": "This is a boilerplate for a Node.JS",
  "packageManager": "pnpm@9.12.3",
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "scripts": {
    "cz": "cz",
    "lint": "eslint .",
    "build": "swc src -d dist --copy-files --strip-leading-paths --delete-dir-on-start --ignore */.{spec,test}.ts",
    "dev": "tsx watch src/app.ts",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "matheussatoshi",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.20.0",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prisma": "^6.3.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.5.0",
    "@prisma/client": "^6.3.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "5.0.1",
    "inquirer": "^12.4.2",
    "morgan": "^1.10.0"
  }
}
