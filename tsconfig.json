{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "es2022",
    "target": "es2022",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "docs"]
}
